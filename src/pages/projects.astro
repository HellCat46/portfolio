import { TAGS, STATUS } from "../shared.types";
---

<Layout title="Projects | Harshit" description="List of Harshit's Projects">
    <Project
        name="Hyprsic"
        repolink="https://github.com/HellCat46/hyprsic"
        description="A WIP (Work In Progress) Status Bar for Wayland Compositor Hyprland written from scratch in C++ that aims to provide a highly efficient and simple experience (similiar to i3bar) status bar experience with no or minimal dependencies. "
        started_at="Jan 4, 2025"
        status={STATUS.Working}
        tags={[TAGS.CPP, TAGS.Wayland, TAGS.Hyprland]}
    />
    
    <Project
        name="JobSpy"
        description="A Webapp to list and search for jobs across all the major employment websites. I am responsible for the developing backend and managing scraping scripts of this project, which is built using Golang and Gin with Postgres Database. I have also developed work on the Auto Deployment system using Docker and GitHub Actions to automatically deploy the project on the server whenever a new commit is pushed to the main branch."
        started_at="Jun 19, 2025"
        status={STATUS.Working}
        tags={[TAGS.Golang, TAGS.Postgres, TAGS.Docker]}
    />
    
